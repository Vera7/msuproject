	<script>
	   var form = document.getElementsByTagName('form')[0];
	   form.addEventListener('submit',contact,false);
	   function contact(e) {
	      // Prevent Default Form Submission
	      e.preventDefault();

	      var target = e.target || e.srcElement;
	      var i = 0;
	      var message = '';

	      // Loop Through All Input Fields
	      for(i = 0; i < target.length; ++i) {
	         // Check to make sure it's a value
	         if(target[i].type != 'text' && target[i].type != 'textarea') {
	                // Skip to next input it doesn't match the set rules
	            continue;
	         }

	         // Add Input Name and values followed by a line break-- not exactly working as expected... need to research 
	         message += target[i].name + ' : ' + target[i].value + "\r\n";
	      }
	      // Modify the hidden body input field that is required for the mailto: scheme... need to reserach   
	      target.elements["body"].value = message;

	      // Submit the form
	      this.submit();
	   }
